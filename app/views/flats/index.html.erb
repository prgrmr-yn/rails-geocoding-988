<p style="color: green"><%= notice %></p>
<h1>Flats</h1>

<div id='map'
     style='width: 100%; height: 500px;'
     data-controller="map"
     data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
     data-map-markers-value ="<%= @markers.to_json %>">
</div>

<div>
  <% @flats.each do |flat| %>
    <p><%= flat.name %></p>
  <% end %>
</div>

<%= link_to "New flat", new_flat_path %>
